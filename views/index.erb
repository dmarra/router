<div class="jumboton">
  <h1 class="center">
    Router
    <small>Ride and GOTV with Bernie!</small>
  </h1>

  <div class="row">
    <div class="col-md-6">
      <div class="center">
        <a href="http://bernie.to/carpool-create">
          <h2 class="btn btn-primary btn-lg">Provide a Ride</h2>
        </a>
      </div>
    </div>

    <div class="col-md-6">
      <div class="center">
        <h2 class="btn btn-primary btn-lg" data-toggle="modal" data-target="#carpoolFinder">Find a Ride</h2>
      </div>
    </div>
  </div>

  <hr>

  <div class="center">
    <h1>Your nearest campaign office is:</h1>
    <h3>
      <%= @nearest_campaign[:address] %>
      <small><%= @nearest_campaign[:distance_text] %> away </small>
    </h3>
    <h3> <%= @nearest_campaign[:phone] %> </h3>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="carpoolFinder" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Carpool Locator</h4>
      </div>
      <div class="modal-body">
        <label>What is your zip code?</label>
        <input id="zip" type="text"></input>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="carpool-finder">Show me the carpools!</button>
      </div>
    </div>
  </div>
</div>

<script>
$('#carpool-finder').on('click', function() {
    zip = document.getElementById('zip').value;
    window.location.href = window.location + 'get/' + zip;
  }
);
</script>
